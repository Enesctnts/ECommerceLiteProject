@using ECommerceLiteUI.Models
@model LoginViewmodel
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}

<div class="row margin-vert-30">
    @* Login Start *@
    <div class="col-md-4 col-md-offset-4 col-md-ofset-4">
        @if (ViewBag.Result!=null)
        {
            <h4 class="text-center text-danger">@ViewBag.Result</h4>
        }
        @if (TempData["PasswordUpdated"]!=null)
        {
            <h4 class="text-center text-success">@TempData["PasswordUpdated"]</h4>
        }

        @using (Html.BeginForm("Login", "Account", FormMethod.Post, new { @class = "form-horizontal" }))
        {
            @Html.ValidationSummary()

            @Html.AntiForgeryToken()

            <div class="login-header margen-bottom-30" align="center">
                <h3 class="text-center">ECommerceLite 303'e HOŞGELDİNİZ!</h3>
                <h3 class="text-center">Hemen Giriş Yapabilirsiniz</h3>
            </div>
            <br />
            <div class="input-group margin-bottom-20">
                <span class="input-group-addon">
                    <i class="fa fa-user"></i>
                </span>
                @Html.TextBoxFor(x => x.Email, new { @class = "form-control", placeholder = "Emailinizi giriniz.." })
                @Html.ValidationMessageFor(x => x.Email)
            </div>
            
            <br />
            <div class="input-group margin-bottom-20">
                <span class="input-group-addon">
                    <i class="fa fa-lock"></i>
                </span>
                @Html.TextBoxFor(x => x.Password, new { @class = "form-control", placeholder = "Şifrenizi giriniz.." , type="password"})
                @Html.ValidationMessageFor(x => x.Password)
            </div>
            <br />
            <div class="input-checkbox">
                <input type="checkbox" id="rememberme" name=" @Model.RememberMe" />
                <label for="rememberme">
                    <span></span>

                Beni Hatırla?
                </label>
            </div>
           <br />
            <div class="row">
                <button type="submit" class="btn btn-default pull-right"
                        style="background-color:#D10024;color:white"
                        > Giriş Yap</button>
                <a href="Account/Register"class="btn btn-success pull-left"
                   style="background-color:white ; color:#D10024;">Kayıt Ol</a>  
            </div>
            <hr />
            <h4 align="center">Şifrenizi mi unuttunuz?</h4>
            <p align="center">
                @Html.ActionLink("Yeni Şifre için BURAYA Tıklayınız","RecoverPassword","Account")
            </p>


            }




    </div>
    @* Login End *@





</div>

